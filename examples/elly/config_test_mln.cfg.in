
[ui]    # user interface

verbose=debug

logfile=@CMAKE_CURRENT_SOURCE_DIR@/examples/__workspace/log.txt
logverbose=trace

[rt]    # runtime

input=@CMAKE_CURRENT_SOURCE_DIR@/examples/elly/MLN
output=@CMAKE_CURRENT_SOURCE_DIR@/examples/elly/RS/mln

#input=@CMAKE_CURRENT_SOURCE_DIR@/examples/elly/LDA
#output=@CMAKE_CURRENT_SOURCE_DIR@/examples/elly/RS/lda

workdir=@CMAKE_CURRENT_SOURCE_DIR@/examples/__workspace

mode=ds

thin=1
burnin=1
nepoch=30

lock = true
is_log_system = true

learn_initstep = 0.05
learn_decay    = 1.00

[sys]   # system

threads = 1

[exp]

replacement=LRU
storage=STORAGE_MM
materialization=LAZY
buffersize_bytes=496000000

